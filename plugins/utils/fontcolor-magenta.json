[
  {
    "title": "$:/config/ShortcutInfo/fontcolor-magenta",
    "modifier": "Junopus",
    "text": "Apply magenta font color to selection"
  },
  {
    "title": "$:/plugins/Junopus/utils/fontcolor-magenta/Caption",
    "modifier": "Junopus",
    "text": "Magenta font"
  },
  {
    "title": "$:/plugins/Junopus/utils/fontcolor-magenta/Hint",
    "modifier": "Junopus",
    "text": "Magenta font"
  },
  {
    "title": "$:/plugins/Junopus/utils/fontcolor-magenta/editortoolbar",
    "modifier": "Junopus",
    "tags": "$:/tags/EditorToolbar",
    "icon": "$:/plugins/Junopus/utils/fontcolor-magenta/icon",
    "caption": "{{$:/plugins/Junopus/utils/fontcolor-magenta/Caption}}",
    "description": "{{$:/plugins/Junopus/utils/fontcolor-magenta/Hint}}",
    "condition": "[<targetTiddler>!has[type]] [<targetTiddler>type[text/vnd.tiddlywiki]]",
    "list-after": "$:/core/ui/EditorToolbar/mono-line",
    "shortcuts": "((fontcolor-magenta))",
    "text": "<$action-sendmessage $message='tm-edit-text-operation' $param='wrap-selection' prefix='@@color:magenta;' suffix='@@' />"
  },
  {
    "title": "$:/plugins/Junopus/utils/fontcolor-magenta/icon",
    "modifier": "Junopus",
    "tags": "$:/tags/Image",
    "text": "<span style='fill: magenta;'>{{$:/core/images/mono-line}}</span>"
  }
]
