[
  {
    "title": "$:/config/ShortcutInfo/fontcolor-blue",
    "modifier": "Junopus",
    "text": "Apply blue font color to selection"
  },
  {
    "title": "$:/plugins/Junopus/utils/fontcolor-blue/Caption",
    "modifier": "Junopus",
    "text": "Blue font"
  },
  {
    "title": "$:/plugins/Junopus/utils/fontcolor-blue/Hint",
    "modifier": "Junopus",
    "text": "Blue font"
  },
  {
    "title": "$:/plugins/Junopus/utils/fontcolor-blue/editortoolbar",
    "modifier": "Junopus",
    "tags": "$:/tags/EditorToolbar",
    "icon": "$:/plugins/Junopus/utils/fontcolor-blue/icon",
    "caption": "{{$:/plugins/Junopus/utils/fontcolor-blue/Caption}}",
    "description": "{{$:/plugins/Junopus/utils/fontcolor-blue/Hint}}",
    "condition": "[<targetTiddler>!has[type]] [<targetTiddler>type[text/vnd.tiddlywiki]]",
    "list-after": "$:/core/ui/EditorToolbar/mono-line",
    "shortcuts": "((fontcolor-blue))",
    "text": "<$action-sendmessage $message='tm-edit-text-operation' $param='wrap-selection' prefix='@@color:blue; ' suffix='@@' />"
  },
  {
    "title": "$:/plugins/Junopus/utils/fontcolor-blue/icon",
    "modifier": "Junopus",
    "tags": "$:/tags/Image",
    "text": "<span style='fill: blue;'>{{$:/core/images/mono-line}}</span>"
  }
]
